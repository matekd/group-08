<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity" >

    <!-- EEG headset data display layout -->

    <include layout="@layout/content_eeg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header button layout -->

        <include layout="@layout/content_connect"/>
        <include layout="@layout/content_switch"/>

        <!-- Car control buttons layout -->
        <include layout="@layout/content_controls" />

    </LinearLayout>

</RelativeLayout>
